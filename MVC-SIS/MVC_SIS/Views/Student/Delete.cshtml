@model Exercises.Models.Data.Student

    @{ 
        ViewBag.Title = "Delete";
    }

<h2>Delete</h2>

<div class="row">
    <div class="col-xs-12">
        <h2>Delete Student</h2>
        @Html.ActionLink("Return to Students", "List", "Student")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Delete", "Student", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.StudentId)
            <p>Are you sure you want to delete @Html.DisplayFor(m => m.FirstName) @Html.DisplayFor(m=>m.LastName) from the system?</p>
            <button class="btn btn-primary" type="submit">Delete Student</button>
            @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-danger" })
        }
    </div>
</div>

