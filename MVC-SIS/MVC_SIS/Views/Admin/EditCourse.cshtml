@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "EditCourse";
}
<div class="row">
    <div class="col-xs-12">
        <h2>EditCourse</h2>
        @Html.ActionLink("Return to Courses","Courses","Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("EditCourse", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m=>m.CourseId)
            <div class="form-group">
                <label>Course Name</label>
                @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control", placeholder = "New Course Name" })
            </div>
                @Html.ActionLink("Cancel", "Courses", "Admin", null, new { @class = "btn btn-danger"})
                <button class="btn btn-primary">Save Course</button>
        }
    </div>
</div>

